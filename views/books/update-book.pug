extends ../layout

block content

  form(action="/books/" + book.id + "?_method=PUT", method="post")
    p
        label(for="title") Title:
        input(type="text", name="title", id="title" value=book.title)
    p
        label(for="author") Author:
        input(type="text", name="author", id="author" value=book.author)
    p
        label(for="genre") Genre:
        input(type="text", name="genre", id="genre" value=book.genre)
    p
        label(for="year") Year:
        input(type="text", name="year", id="year" value=book.year)
    p
        input(type="submit", value="Update Book")

  form(method="post", action="/books/" + book.id +"?_method=DELETE", onsubmit="return confirm('Do you really want to delete this book?');")
    p
        a(href="/books", class="button") Cancel
    p
        input(type="submit", value="Delete Book")